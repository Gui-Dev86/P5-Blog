{% extends 'base.twig' %}
{% block title %}

{% endblock %}

{% block content %}
<div class="container col-10">
    <div class="row">
        <div class="col-10 my-4">
            <a class="font-weight-bold retour-article" href="{{ constant('local') }}articles/readArticle/{{ idArt }}/1">< Retour Ã  l'article</a>
        </div>
    </div>
</div>
<section class="container col-10 mb-5" id="modifyComment">
    <div class="container col-12">
        <div class="row">
            <div class="col-12 mt-3 mb-4 containerDashed text-center">
                <h3 class="font-weight-bold">
                    <span class="ion-minus"></span>Modifiez votre commentaire<span class="ion-minus"></span>
                </h3>
            </div>
        </div>
    </div>
        <div class="container col-12 col-md-8 offset-md-2 pb-5">
            <form class="col-12" action="{{ constant('local') }}articles/modifyComment/{{ idArt }}/1/{{ comment.0.id_com }}" method="post">
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Commentaire</label>
                    <textarea class="form-control" id="comment" name="commentContent" rows="3">{{ comment.0.content_com }}</textarea>
                </div>
                <div class = "text-center">
                    <button type="submit" name="formModifyComment" class="btn btn-modifyCom font-weight-bold mb-5">Modifier</button>
                </div>
            </form>
            {% if valide is defined %}
                <br /><p class = "font-weight-bold">{{ valide }}<p>  
            {% endif %} 
            {% if error is defined %}
                <br /><p class = "font-weight-bold">{{ error }}<p>  
            {% endif %} 
        </div>
    </div>
</section>

{% endblock %}