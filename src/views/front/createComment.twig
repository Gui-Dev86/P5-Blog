{% extends 'base.twig' %}
{% block title %}

{% endblock %}

{% block content %}
<div class="container col-10">
    <div class="row">
        <div class="col-10 my-4">
            <a class="font-weight-bold retour-article" href="{{ constant('local') }}articles/readArticle/{{ idArt }}/1">< Retour à l'article</a>
        </div>
    </div>
</div>
<section class="container col-10 mb-5" id="createComment">
    <div class="container col-12">
        <div class="row">
            <div class="col-12 mt-3 mb-4 containerDashed text-center">
                <h4 class="font-weight-bold">
                    <span class="ion-minus"></span>Ajoutez un commentaire<span class="ion-minus"></span>
                </h4>
            </div>
        </div>
    </div>
        <div class="container col-12 col-md-8 offset-md-2 pb-5">
            <form class="col-12" action="{{ constant('local') }}articles/addComment/{{ idArt }}/1" method="post">
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Commentaire</label>
                    <textarea class="form-control" id="comment" name="commentContent" rows="3"></textarea>
                </div>
                <div class = "text-center">
                    <button type="submit" name="formCreateComment" class="btn btn-createCom font-weight-bold mb-5">Valider</button>
                </div>
            </form>
            <br /><p class = "text-justify font-weight-bold font-italic">*Attention avant toute publication les commentaires postés par un utilisateur seront soumis à l'un des administrateurs<p> 
            {% if error is defined %}
                <br /><p class = "font-weight-bold">{{ error }}<p>
            {% endif %}
        </div>
    </div>
</section>

{% endblock %}
