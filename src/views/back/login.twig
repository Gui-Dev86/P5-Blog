{% extends 'base.twig' %}
{% block title %}

{% endblock %}

{% block content %}

<section class="container col-10 mb-5" id="login">
    <div class="container col-12">
        <div class="row">
            <div class="col-12 mt-3 mb-4 containerDashed text-center">
                <h3 class="font-weight-bold">
                    <span class="ion-minus"></span>CONNECTEZ-VOUS<span class="ion-minus"></span>
                </h3>
            </div>
        </div>
    </div>
    <div class="container col-12 col-md-10">
        <div class="row justify-content-center">
            <div class="container col-12 col-md-8 offset-md-2 pb-5">
                <form method="post" action="{{ constant('local') }}login/loginUser">
                    <div class="form-group">
                        <label class="font-weight-bold" for="login">Login</label>
                        <input type="text" name="login" class="form-control" id="login" placeholder="Saisissez votre login">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" for="password">Mot de passe</label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="Saisissez votre mot de passe">
                    </div>
                    <div class="btnCenterMobile">
                        <button type="submit" name="formLogin" class="btn font-weight-bold btnConnect mt-3">Se connecter</button>
                    </div>
                </form>
                {% if error is defined %}
                    <br /><p class = "font-weight-bold">{{ error }}</p>
                {% endif %}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="container col-12 col-md-8 offset-md-2 pb-3">
                <a class="linkConnect" href="{{ constant('local') }}login/recupPassword">Mot de passe oubli√©? cliquez ici</h4>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="container col-12 col-md-8 offset-md-2 pb-3">
                <a class="linkConnect" href="{{ constant('local') }}login/registerView">Enregistrez-vous</h4>
            </div>
        </div>
    </div>
</section>

{% endblock %}
